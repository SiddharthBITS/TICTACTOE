<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.codinginflow.tictactoe.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/T1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 1 (O) : 0"
            android:textColor="#ff3399"
            android:textSize="30sp" />

        <Button
            android:id="@+id/Bu0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="33dp"
            app:strokeColor="#ff3399"
            app:strokeWidth="2dp"
            android:text="New GAME" />
    </RelativeLayout>

    <TextView
        android:id="@+id/T2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 2 (X) : 0"
        android:textColor="#ff3399"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/Bu1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:tag="1"
            app:strokeColor="#ff3399"
            app:strokeWidth="2dp"
            android:textSize="60sp" />
        <Button
            android:id="@+id/Bu2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:tag="2"
            app:strokeColor="#ff3399"
            app:strokeWidth="2dp"
            android:textSize="60sp" />
        <Button
            android:id="@+id/Bu3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:tag="3"
            app:strokeColor="#ff3399"
            app:strokeWidth="2dp"
            android:textSize="60sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/Bu4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:tag="4"
            app:strokeColor="#ff3399"
            app:strokeWidth="2dp"
            android:textSize="60sp" />
        <Button
            android:id="@+id/Bu5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:tag="5"
            app:strokeColor="#ff3399"
            app:strokeWidth="2dp"
            android:textSize="60sp" />
        <Button
            android:id="@+id/Bu6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:tag="6"
            app:strokeColor="#ff3399"
            app:strokeWidth="2dp"
            android:textSize="60sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/Bu7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:tag="7"
            app:strokeColor="#ff3399"
            app:strokeWidth="2dp"
            android:textSize="60sp" />
        <Button
            android:id="@+id/Bu8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:tag="8"
            app:strokeColor="#ff3399"
            app:strokeWidth="2dp"
            android:textSize="60sp" />
        <Button
            android:id="@+id/Bu9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:tag="9"
            app:strokeColor="#ff3399"
            app:strokeWidth="2dp"
            android:textSize="60sp" />
    </LinearLayout>
</LinearLayout>